<h1><%= @station.name %></h1>

<ul>
<% @station.lines.each do |i| %>
  <li><%= i.name %></li>
  <% end %>
</ul>

<p><%= link_to "Edit", edit_station_path(@station), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", station_path(@station),
                        :data => {:confirm => "You sure?",
                        :method => "delete"},
                        :class => "btn btn-danger" %></p>

<p><%= link_to "Home", stations_path, :class => "btn btn-default" %></p>
